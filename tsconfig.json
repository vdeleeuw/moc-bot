{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "build",
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "ESNext",
        "lib": ["ESNext"],
        "sourceMap": true,
        "types": ["node"],
        "typeRoots": ["node_modules/@types"],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true
    },
    "exclude": ["node_modules", "build"]
}
